<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:RUMMY_SCOREKEEPER.ViewModel"
             xmlns:model="clr-namespace:RUMMY_SCOREKEEPER.Model"
             x:DataType="viewmodel:NewGameViewModel"
             x:Class="RUMMY_SCOREKEEPER.Views.NewGamePage"
             Title="">
    <VerticalStackLayout Spacing="5" Margin="5">
        
        <Grid ColumnDefinitions="*,*"
              RowDefinitions="*,*,*,*"
              ColumnSpacing="4"
              RowSpacing="4"
              >

            <Label x:Name="Players"
                   Grid.Column="0"
                   Grid.Row="0"
                   Text="Players"
                   FontSize="50"
                   FontAttributes="Bold"
                   HorizontalOptions="CenterAndExpand"
                   />

            <Button x:Name="addBtn"
                    Grid.Column="0"
                    Grid.Row="1"
                    Text="Add"
                    Command="{Binding AddPlayerBtnCommand}"
                    HeightRequest="40"
                    HorizontalOptions="Start"
                    
                    />
            
            <Entry  x:Name="NameText"
                    ClassId="NameText"
                    Text="{Binding Text}"
                    Grid.Column="0"
                    Grid.Row="1"
                    Placeholder="2 - 6 players"
                    HeightRequest="40"
                    WidthRequest="100"
                    HorizontalOptions="CenterAndExpand"
                    MaxLength="100"
                    Keyboard="Text"
                    />

            <Label x:Name="WinningScore"
                   Grid.Column="1"
                   Grid.Row="0"
                   Text="Winning Score"
                   FontSize="50"
                   FontAttributes="Bold"
                   HorizontalOptions="CenterAndExpand"
                   />

            <Entry  x:Name="Score"
                    ClassId="Score"
                    Grid.Column="1"
                    Grid.Row="1"
                    Text="{Binding TotalScoreEntered}"
                    Placeholder="100 - 500"
                    HeightRequest="40"
                    MaxLength="3"
                    FontSize="20"
                    HorizontalOptions="CenterAndExpand"
                    Keyboard="Numeric"
                    />
            
            <Button Grid.Column="0"
                    Grid.Row="2"
                    HeightRequest="40"
                    HorizontalOptions="End"
                    Command="{Binding StartGameCommand}"
                    CommandParameter="{x:Reference Name=Score}"
                    Text="Start"
                />


            <Button Grid.Column="1"
                    Grid.Row="2"
                    HeightRequest="40"
                    HorizontalOptions="Start"
                    Text="Cancel"
                    Command="{Binding CancelBtnCommand}"
                />


            <CollectionView Grid.ColumnSpan="2"
                 Grid.Row="3"
                 ItemsSource="{Binding Players}"
                 SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Player">
                        <SwipeView>
                            <SwipeView.LeftItems>
                                <SwipeItems>
                                    <SwipeItem Text="Delete"
                                    BackgroundColor="Red"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:NewGameViewModel}}, Path=DeletePlayerBtnCommand}"
                                    CommandParameter="{Binding Name}"
                                    />
                                </SwipeItems>
                            </SwipeView.LeftItems>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Delete"
                                    BackgroundColor="Red"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:NewGameViewModel}}, Path=DeletePlayerBtnCommand}"
                                    CommandParameter="{Binding Name}"
                                    />
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Frame>
                                <Label Text="{Binding Name}"
                                       FontSize="24"
                                       />
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>



        <!--<Grid RowDefinitions="100,Auto,Auto,100"
