<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:RUMMY_SCOREKEEPER.ViewModel"
             xmlns:model="clr-namespace:RUMMY_SCOREKEEPER.Model"
             x:DataType="viewmodel:GamesViewModel"
             x:Class="RUMMY_SCOREKEEPER.Views.GamesPage"
             Title="Games Page"
             >


    <VerticalStackLayout Spacing="10" Margin="5">

        <Grid x:Name="PlayerGrid"
              RowDefinitions="Auto, 100,*, *"
              ColumnDefinitions="100,*" 
              ColumnSpacing="4" 
              RowSpacing="4"
              >

            <Label x:Name="Players"
                   Text="Enter Player Names"
                   FontSize="50"
                   FontAttributes="Bold"
                   HorizontalOptions="CenterAndExpand"
                   Grid.ColumnSpan="2"
                   Grid.Row="0"
                   />
            
            <Button x:Name="addBtn"
                    Grid.Column="0"
                    Grid.Row="1"
                    Text="Add Player"
                    Command="{Binding AddPlayerBtnCommand}"
                    HeightRequest="40"
                    />

            <!--<Button Grid.Column="1"
                    x:Name="removeBtn"
                    Text="Remove Player"
                    Clicked="RemovePlayerBtn_Clicked" 
                    HeightRequest="40"
                    />-->

            <Entry  x:Name="NameText"
                    ClassId="NameText"
                    Text="{Binding Text}"
                    Grid.Column="1"
                    Grid.Row="1"
                    Placeholder="Enter Name Here"
                    HeightRequest="40"
                    MaxLength="20"
                    />
            <CollectionView Grid.ColumnSpan="2"
                            Grid.Row="2"
                            ItemsSource="{Binding Players}"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Player">
                        <SwipeView>
                            <SwipeView.LeftItems>
                                <SwipeItems>
                                    <SwipeItem Text="Delete"
                                               BackgroundColor="Red"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:GamesViewModel}}, Path=DeletePlayerBtnCommand}"
                                               CommandParameter="{Binding Name}"
                                               />
                                </SwipeItems>
                            </SwipeView.LeftItems>
                            <Frame>
                                <Label Text="{Binding Name}"
                                       FontSize="24"
                                       />
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Next!"
                    Grid.ColumnSpan="2"
                    Grid.Row="3" 
                    >
                <Button.GestureRecognizers>
                    <TapGestureRecognizer
                            Command="{Binding NextBtnCommand}"
                            CommandParameter="{x:Reference Name=NameText}"
                            />
                </Button.GestureRecognizers>

            </Button>


        </Grid>
    </VerticalStackLayout>
</ContentPage>